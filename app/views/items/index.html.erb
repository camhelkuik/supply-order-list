<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Catelog number</th>
      <th>Integer</th>
      <th>Category</th>
      <th>Business</th>
      <th>Description</th>
      <th>Amount per one</th>
      <th>Material</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.catelog_number %></td>
        <td><%= item.integer %></td>
        <td><%= item.category_id %></td>
        <td><%= item.business_id %></td>
        <td><%= item.description %></td>
        <td><%= item.amount_per_one %></td>
        <td><%= item.material %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

